<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paul.moo2.Leaderboard">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/browseButton"
        android:layout_alignTop="@+id/imageMovie"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points "
        android:id="@+id/pointsButton"
        android:layout_alignTop="@+id/browseButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageMovie"
        android:src="@drawable/barber"
        android:adjustViewBounds="true"
        android:maxHeight="180dp"
        android:maxWidth="250dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_below="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/titleMovie"
        android:layout_below="@+id/browseButton"
        android:layout_alignLeft="@+id/browseButton"
        android:layout_alignStart="@+id/browseButton"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="33dp"
        android:textColor="#a5c950" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="critiques"
        android:id="@+id/critiques"
        android:layout_marginTop="46dp"
        android:textSize="12dp"
        android:textColorLink="#4141d9"
        android:textColor="#4141d9"
        android:layout_below="@+id/critiqueMovie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/critiqueMovie"
        android:text="Critique this movie"
        android:layout_below="@+id/imageMovie"
        android:layout_alignRight="@+id/pointsButton"
        android:layout_alignEnd="@+id/pointsButton"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendCritique"
        android:layout_below="@+id/critiqueMovie"
        android:layout_alignRight="@+id/pointsButton"
        android:layout_alignEnd="@+id/pointsButton" />

</RelativeLayout>
