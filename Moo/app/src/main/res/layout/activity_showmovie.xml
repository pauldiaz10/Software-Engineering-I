<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paul.moo2.showmovie">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageMovie"
        android:src="@drawable/barber"
        android:adjustViewBounds="true"
        android:maxHeight="180dp"
        android:maxWidth="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etMooPoints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/mootest1"
        android:adjustViewBounds="true"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/etTitle"
        android:layout_alignEnd="@+id/etTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Barbershop: The Next Cut"
        android:id="@+id/etTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageMovie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHighlight="#eb920c"
        android:textColor="#f4b43c"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cast: Ice Cube"
        android:id="@+id/etCast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etTitle"
        android:textSize="11dp"
        android:textColor="#1d12b7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 0"
        android:id="@+id/etMooPoints"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Synopsis"
        android:id="@+id/etSynopsis"
        android:textSize="11dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/etCast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#3f29cd" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:id="@+id/browseButton"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Comments  "
        android:id="@+id/commentsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageMovie"
        android:layout_alignEnd="@+id/imageMovie" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WATCH TRAILER"
        android:id="@+id/watchTrailer"
        android:layout_alignTop="@+id/commentsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
